<CrunchyButton
  @class="crunchy-sort-by__toggle px-2 py-1"
  @onClick={{action "toggleSort"}}
  @aria-label={{this.ariaLabelForToggle}}>
  {{#if this.sortDescending}}
    <FaIcon @icon="sort-amount-down" />
  {{else}}
    <FaIcon @icon="sort-amount-up" />
  {{/if}}
</CrunchyButton>

<BasicDropdown as |dd|>
  <dd.Trigger class="crunchy-sort-by__menu-trigger flex items-center p-1">
    <span class="hidden md:block">{{this.sortMenuName}}</span>
    <span class="md:hidden">Sortâ€¦</span>
    <FaIcon @icon="angle-down" @size="xs" class="ml-1" />
  </dd.Trigger>

  <dd.Content class="crunchy-sort-by__dd-menu shadow p-2 border">
    <ul role="menu">
      {{#each-in @sortMenuOptions as |key label|}}
        <li class="crunchy-sort-by__menu-item py-2 text-sm" role="menuitem" {{action "didSelectSortAttr" key dd}}>
          {{label}}
        </li>
      {{/each-in}}
    </ul>
  </dd.Content>
</BasicDropdown>
