{{#component group
  field=field
  model=model
  as |group|}}

  <div class="flex w-full">
    <group.control as |control|>
      <Input
        @id={{control.controlId}}
        @checked={{this.value}}
        @type="checkbox"
        @disabled={{@disabled}}
        aria-label={{@aria-label}}
        @data-test-id={{concat @field "-checkbox"}}
        @keyPress={{action group.validateField @field}}
        @click={{action group.validateField @field}}
        @touchStart={{action group.validateField @field}}
        @class={{concat "crunchy-form__checkbox "
          @controlClass
        }}
      />
    </group.control>

    <group.label class={{concat "crunchy-form__group-label--checkbox " @labelClass}}>
      {{@label}}
    </group.label>
  </div>

  {{#if group.hasError}}
    <group.errors class={{@errorClass}} />
  {{/if}}
{{/component}}
