{{#component this.group
  field=this.field
  model=this.model
  as |group|}}

  {{#if @label}}
    <group.label class={{@labelClass}}>
      {{@label}}
    </group.label>
  {{/if}}

  <group.control as |control|>
    <Textarea
      @id={{control.controlId}}
      @value={{this.value}}
      @rows={{@rows}}
      @placeholder={{@placeholder}}
      @disabled={{@disabled}}
      @spellcheck={{true}}
      @key-up={{fn group.validateField @field}}
      @focus-out={{fn group.validateField @field}}
      aria-label={{@aria-label}}
      @data-test-id={{concat @field "-field"}}
      @class={{concat "crunchy-form__textarea "
        @controlClass
      }}
    />
  </group.control>

  {{#if group.hasError}}
    <group.errors class={{@errorClass}} />
  {{/if}}
{{/component}}
