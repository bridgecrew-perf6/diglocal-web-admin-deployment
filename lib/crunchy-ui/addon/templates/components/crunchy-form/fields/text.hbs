{{#component group
  field=field
  model=model
  didBlur=didBlur
  as |group|}}

  {{#if label}}
    <group.label class={{labelClass}}>
      {{label}}
    </group.label>
  {{/if}}

  <group.control as |control|>
    <Input
      @id={{control.controlId}}
      @value={{value}}
      @type={{type}}
      @placeholder={{placeholder}}
      @autocomplete={{autocomplete}}
      @disabled={{disabled}}
      @focus-out={{action (mut didBlur) true}}
      aria-label={{aria-label}}
      @class={{concat "crunchy-form__input "
        controlClass
      }}
    />
  </group.control>

  {{#if group.hasError}}
    <group.errors class={{errorClass}} />
  {{/if}}
{{/component}}
