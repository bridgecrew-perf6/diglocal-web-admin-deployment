{{#component group
  field=field
  model=model
  as |group|}}

  {{#if @label}}
    <group.label class={{@labelClass}}>
      {{@label}}
    </group.label>
  {{/if}}

  <group.control as |control|>
    <TagInput
      name={{control.controlId}}
      @tags={{@tags}}
      @readOnly={{@disabled}}
      @addTag={{this.addTag}}
      @onKeyUp={{fn group.validateField @field}}
      @removeTagAtIndex={{this.removeTagAtIndex}}
      as |tag|>
      {{tag}}
    </TagInput>
  </group.control>

  {{#if group.hasError}}
    <group.errors class={{@errorClass}} />
  {{/if}}
{{/component}}
