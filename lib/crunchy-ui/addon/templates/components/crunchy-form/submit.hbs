<CrunchyButton
  @type="submit"
  @class={{@class}}
  @testId={{@testId}}
  @disabled={{@disabled}}
  @task={{@task}} as |button|>
  {{#if button.isRunning}}
    <FaIcon @icon="spinner" @pulse="true" />
  {{else}}
    {{#if (has-block)}}
      {{yield}}
    {{else}}
      {{@value}}
    {{/if}}
  {{/if}}
</CrunchyButton>
