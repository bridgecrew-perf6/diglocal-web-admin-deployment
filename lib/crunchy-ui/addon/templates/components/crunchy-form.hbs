{{#with (component "crunchy-form/group"
  form=this
  model=this.model
  didSubmit=this.didSubmit
  isSubmitting=this.isSubmitting
  formErrors=this.formErrors
  validateField=this.validateField
  ) as |groupComponent|}}

  {{yield (hash
    field=(component "crunchy-form/field"
      model=this.model
      group=groupComponent
      form=this)
    text-field=(component "crunchy-form/fields/text"
      model=this.model
      group=groupComponent
      disabled=this.isReadonly
      form=this)
    text-area=(component "crunchy-form/fields/textarea"
      model=this.model
      group=groupComponent
      disabled=this.isReadonly
      form=this)
    checkbox=(component "crunchy-form/fields/checkbox"
      model=this.model
      group=groupComponent
      disabled=this.isReadonly
      form=this)
    tag-input=(component "crunchy-form/fields/tag-input"
      model=this.model
      group=groupComponent
      disabled=this.isReadonly
      form=this)
    submit=(component "crunchy-form/submit"
      task=this.submitTask)
    cancel=(component "crunchy-button"
      class="crunchy-button--cancel"
      task=this.cancelTask)
    errors=(component "crunchy-form/errors"
      model=this.model
      form=this
      formErrors=this.formErrors
      formMessages=this.formMessages)
    fields-for=(component "crunchy-form"
      form=this
      isChildForm=true
      isReadonly=this.isReadonly
      didSubmit=this.didSubmit)
    isSubmitting=this.isSubmitting
    didSubmit=this.didSubmit
    isReadonly=this.isReadonly
    validateField=this.validateField
    resetForm=this.resetForm
    formErrors=this.formErrors
    formMessages=this.formMessages
  )}}

{{/with}}
