{{#with (component "crunchy-form/group"
  form=this
  model=model
  didSubmit=didSubmit
  isSubmitting=isSubmitting
  formErrors=formErrors
  validateField=(action "validateField")
  ) as |groupComponent|}}

  {{yield (hash
    field=(component "crunchy-form/field"
      model=model
      group=groupComponent
      form=this)
    text-field=(component "crunchy-form/fields/text"
      model=model
      group=groupComponent
      disabled=isReadonly
      form=this)
    text-area=(component "crunchy-form/fields/textarea"
      model=model
      group=groupComponent
      disabled=isReadonly
      form=this)
    checkbox=(component "crunchy-form/fields/checkbox"
      model=model
      group=groupComponent
      disabled=isReadonly
      form=this)
    tag-input=(component "crunchy-form/fields/tag-input"
      model=model
      group=groupComponent
      disabled=isReadonly
      form=this)
    submit=(component "crunchy-form/submit"
      task=submitTask)
    cancel=(component "crunchy-button"
      type="button"
      class="crunchy-button--cancel"
      task=cancelTask)
    errors=(component "crunchy-form/errors"
      model=model
      form=this
      formErrors=formErrors
      formMessages=formMessages)
    fields-for=(component "crunchy-form"
      form=this
      isChildForm=true
      isReadonly=isReadonly
      didSubmit=didSubmit)
    isSubmitting=isSubmitting
    didSubmit=didSubmit
    isReadonly=isReadonly
    validateField=(action "validateField")
    formErrors=formErrors
    formMessages=formMessages
  )}}

{{/with}}
