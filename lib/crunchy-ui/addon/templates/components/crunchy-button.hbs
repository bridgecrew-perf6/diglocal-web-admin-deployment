<button
  class={{concat
    "crunchy-button "
    (concat "crunchy-button--" type " ")
    @class
  }}
  type={{@type}}
  aria-label={{@aria-label}}
  data-test-id={{@testId}}
  disabled={{this.disabled}}
  onclick={{action "click"}}>
  {{#if (has-block)}}
    {{yield (hash isRunning=this.isRunning)}}
  {{else}}
    {{@value}}
  {{/if}}
</button>
