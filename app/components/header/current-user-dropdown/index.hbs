<BasicDropdown
  @horizontalPosition="right"
  as |dd|>
  <dd.Trigger data-test-id="current-user-dd-trigger" class="flex items-center focus:outline-none mr-3">
    <div
      class="w-8 h-8 rounded-full mr-2 bg-cover bg-center bg-no-repeat text-center overflow-hidden bg-white border border-white"
      style={{background-image currentUser.user.profileImages.firstObject.sizes.mobile}}>
      {{#unless currentUser.user.profileImages.length}}
        <div class="flex w-full h-full items-center justify-center">
          <FaIcon @icon="user" @size="lg" class="text-gray-400 mt-2 text-center" />
        </div>
      {{/unless}}
    </div>
    <span class="hidden md:inline-block md:mr-1">{{currentUser.user.headerDisplayName}}</span>
    <FaIcon @icon="angle-down" @size="xs" />
  </dd.Trigger>
  <dd.Content class="shadow p-1 mt-2 border rounded-sm">
    <div class="py-2 px-4 text-gray-600">
      <p class="text-xs">Currently logged in as:</p>
      <p class="text-sm mb-1 text-black">{{currentUser.user.email}}</p>
    </div>
    <hr class="py-1">
    <ul>
      <li class="py-2 px-4 w-full">
        <CrunchyButton @onClick={{fn this.logout dd}} @class="crunchy-button--link w-full" @testId="logout">
          Logout
        </CrunchyButton>
      </li>
    </ul>
  </dd.Content>
</BasicDropdown>
