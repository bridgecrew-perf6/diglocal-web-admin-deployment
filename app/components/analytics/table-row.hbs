<div class="analytics-table__row">
  <div class="analytics-table__col-group">
    <div class="analytics-table__cell text-left w-full">
      <div class="font-bold truncate" title={{@model.business.name}}>{{@model.business.name}}</div>
      <div>{{@model.formattedDate}}</div>
    </div>
  </div>
  <div class="analytics-table__col-group">
    <div class="w-1/3 analytics-table__cell">
      {{add @model.pageViewApp @model.pageViewBrowser @model.businessApp @model.businessBrowser @model.scoopsApp @model.scoopsBrowser @model.marqueeScoopImpressionApp @model.marqueeScoopImpressionBrowser}}
    </div>
    <div class="w-1/3 analytics-table__cell">
      {{add @model.pageViewApp @model.businessApp @model.scoopsApp @model.marqueeScoopImpressionApp}}
    </div>
    <div class="w-1/3 analytics-table__cell">
      {{add @model.pageViewBrowser @model.businessBrowser @model.scoopsBrowser @model.marqueeScoopImpressionBrowser}}
    </div>
  </div>
  <div class="analytics-table__col-group">
    <div class="w-1/3 analytics-table__cell">
      {{add @model.pageViewApp @model.pageViewBrowser}}
    </div>
    <div class="w-1/3 analytics-table__cell">{{@model.pageViewApp}}</div>
    <div class="w-1/3 analytics-table__cell">{{@model.pageViewBrowser}}</div>
  </div>
  <div class="analytics-table__col-group">
    <div class="w-1/3 analytics-table__cell">
      {{add @model.businessApp @model.businessBrowser}}
    </div>
    <div class="w-1/3 analytics-table__cell">{{@model.businessApp}}</div>
    <div class="w-1/3 analytics-table__cell">{{@model.businessBrowser}}</div>
  </div>
  <div class="analytics-table__col-group">
    <div class="w-1/3 analytics-table__cell">
      {{add @model.scoopsApp @model.scoopsBrowser}}
    </div>
    <div class="w-1/3 analytics-table__cell">{{@model.scoopsApp}}</div>
    <div class="w-1/3 analytics-table__cell">{{@model.scoopsBrowser}}</div>
  </div>
  <div class="analytics-table__col-group">
    <div class="w-1/3 analytics-table__cell">
      {{add @model.marqueeScoopImpressionApp @model.marqueeScoopImpressionBrowser}}
    </div>
    <div class="w-1/3 analytics-table__cell">{{@model.marqueeScoopImpressionApp}}</div>
    <div class="w-1/3 analytics-table__cell">{{@model.marqueeScoopImpressionBrowser}}</div>
  </div>
</div>
