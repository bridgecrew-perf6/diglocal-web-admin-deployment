<CrunchyForm
  @model={{this}}
  @onSubmit={{action "submit"}}
  as |form|
>
  {{#if this.error}}
    <p class="text-red-600 text-xs font-semibold mb-3"> {{or this.error.message "Oops! An unknown error occurred."}} </p>
  {{/if}}

  <div class="mb-4">
    <form.text-field
      @field="username"
      @label="Email Address"
      @placeholder="Enter email"
      @autocomplete="username"
    />
  </div>
  <div class="mb-6">
    <form.text-field
      @field="password"
      @label="Password"
      @type="password"
      @placeholder="Enter password"
      @autocomplete={{if @isLogin "current-password" "new-password"}}
    />
  </div>

  <div class="flex w-full justify-between mb-3">
    <form.submit>
      {{if @isLogin "Log In" "Sign Up"}}
    </form.submit>

    <CrunchyButton @class="crunchy-button--link" @onClick={{action "switchActionType"}}>
      {{if this.isLogin "Sign Up" "Log In"}}
    </CrunchyButton>
  </div>
</CrunchyForm>

{{#if this.isLogin}}
  <hr>
  <CrunchyButton @class="crunchy-button--link text-sm">
    Forgot Password?
  </CrunchyButton>
{{/if}}
