<CrunchyForm
  @model={{this}}
  @onSubmit={{action "submit"}}
  @class="bg-white rounded px-8 pt-6 mb-4"
  as |form|
>
  <div class="mb-4">
    <form.text-field
      @field="username"
      @placeholder="Enter email"
      @autocomplete="username"
      @aria-label="Username or email"
      @controlClass="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
    />
  </div>
  <div class="mb-6">
    <form.text-field
      @field="password"
      @type="password"
      @placeholder="Enter password"
      @autocomplete={{if @isLogin "current-password" "new-password"}}
      @aria-label="Password"
      @controlClass="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
    />
  </div>

  <form.submit @class="bg-blue-500 hover:bg-blue-700 text-white font-bold w-full py-2 px-4 rounded focus:outline-none focus:shadow-outline">
    {{if @isLogin "Sign In" "Create Account"}}
  </form.submit>
</CrunchyForm>
