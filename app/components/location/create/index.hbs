<div class="flex items-center justify-start mb-3 text-sm">
  <div class="flex w-full justify-between items-end">
    <p class="mx-2">Manage locations for your business.</p>
    <CrunchyButton
      @onClick={{action "create"}}
      @aria-label="Add a new location"
      @class="crunchy-button--primary crunchy-button--text-sm"
      @testId="add-location"
      @disabled={{this.hasNewRecord}}>
      <FaIcon @icon="plus" @size="xs" class="mr-1" /> Add Location
    </CrunchyButton>
  </div>
</div>

{{#if this.hasNewRecord}}
  <Location::Form @model={{this.newRecord}} @isEditing={{true}} />
{{/if}}
