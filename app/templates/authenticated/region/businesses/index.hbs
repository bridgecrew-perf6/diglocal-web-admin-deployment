<div class="treadmill-content__fixed-header text-sm">
  <div class="flex h-10">
    <div class="flex w-1/3 flex-shrink relative">
      <div class="absolute left-0 top-0 bottom-0 flex items-center text-teal-600 font-medium px-2">
        <FaIcon @icon="search" />
      </div>
      <Input
        @type="search"
        @value={{this.searchString}}
        @key-up={{perform this.didSearch}}
        @focus-out={{perform this.didSearch}}
        @escape-press={{action "clearSearch"}}
        @placeholder="Search..."
        aria-label="Search businesses"
        class="rounded border-0 p-3 pl-8 w-full border border-gray-300 bg-gray-100 focus:bg-white" />
    </div>
    <div class="flex items-center text-gray-600">
      <BasicDropdown as |dd|>
        <dd.Trigger class="ml-2 pb-1 px-2 inline-block">
          <FaIcon @icon="filter" @size="xs" /> Listing Type <FaIcon @icon="angle-down" @size="xs" class="ml-1" />
        </dd.Trigger>
        <dd.Content class="shadow p-2 border">
          <form>
            <fieldset>
              <div class="p-1">
                <input id="featured" type="checkbox" name="featured" checked={{this.featured}} onchange={{action (mut this.featured) value="target.checked"}} >
                <label for="admin">Featured</label>
              </div>
              {{#each this.roleOptions as |option|}}
                <div class="p-1">
                  <input id={{option.value}} type="checkbox" name={{option.label}} checked={{contains option.value this.roles}} onchange={{action "addFilter" option.value "roles"}} >
                  <label for={{option.value}}>{{option.label}}</label>
                </div>
              {{/each}}
            </fieldset>
          </form>
        </dd.Content>
      </BasicDropdown>
      <BasicDropdown as |dd|>
        <dd.Trigger class="ml-2 pb-1 px-2 inline-block">
          <FaIcon @icon="filter" @size="xs" /> Category <FaIcon @icon="angle-down" @size="xs" class="ml-1" />
        </dd.Trigger>
        <dd.Content class="shadow p-2 border">
          <form>
            <fieldset>
              {{#each this.categoryOptions as |category|}}
                <div class="p-1">
                  <input id={{category.id}} type="checkbox" name={{category.longName}} checked={{contains category.id this.categories}} onchange={{action "addFilter" category.id "categories"}} >
                  <label for={{category.id}}>{{category.longName}}</label>
                </div>
              {{/each}}
            </fieldset>
          </form>
        </dd.Content>
      </BasicDropdown>
    </div>
    <div class="flex flex-grow items-center justify-end text-gray-600">
      <CrunchySortBy @sort={{this.sort}} @sortMenuOptions={{this.sortMenuOptions}} />
    </div>
  </div>
  {{#if (or this.collectedFilters.length this.featured)}}
    <div class="flex pt-2">
      <button {{action "clearAllFilters"}} type="button" class="inline border border-gray-500 rounded text-xs mr-2 py-1 px-2 text-gray-600">
        Clear Filters
      </button>
      {{#if this.featured}}
        <CrunchyChip
          @tagName="li"
          @label="Featured"
          @allowClear={{true}}
          @onClear={{action (mut this.featured) false}}
        />
      {{/if}}
      <ul aria-label="Applied filters">
        {{#each this.roles as |value|}}
          {{#let (find-by "value" value this.roleOptions) as |option|}}
            <CrunchyChip
              @tagName="li"
              @label={{option.label}}
              @allowClear={{true}}
              @onClear={{action "removeFilter" option.value "roles"}}
            />
          {{/let}}
        {{/each}}
        {{#each this.categories as |id|}}
          {{#let (peek-record-from-id id "category") as |record|}}
            <CrunchyChip
              @tagName="li"
              @label={{record.longName}}
              @allowClear={{true}}
              @onClear={{action "removeFilter" record.id "categories"}}
            />
          {{/let}}
        {{/each}}
      </ul>
    </div>
  {{/if}}
</div>

<div class="treadmill-content__table-body pt-32 px-2">
  <EllaTreadmill
    @content={{@model.businesses}}
    @minColumnWidth="100%"
    @row="210" as |item|
  >
    {{#if item.is_loading}}
      <div class="flex items-center justify-center">
        <FaIcon @icon="spinner" @pulse={{true}} class="text-gray-500" />
      </div>
     {{else}}
      <Business::ListRow @model={{item}} />
    {{/if}}
  </EllaTreadmill>

  {{#if (or this.didSearch.isRunning @model.businesses.loading)}}
    <div class="absolute inset-0 flex p-10 items-center justify-center h-screen text-brand-primary">
      <FaIcon @icon="spinner" @pulse={{true}} @size="2x" />
    </div>
  {{else if (eq @model.businesses.length 0)}}
    <div class="border rounded bg-white m-4 p-6">
      <p> No businesses found. </p>
    </div>
  {{/if}}
</div>
