<div class="treadmill-content__fixed-header">
  <div class="flex h-10">
    <div class="flex relative w-1/2">
      <div class="absolute left-0 top-0 bottom-0 flex items-center text-teal-600 font-medium px-2">
        <FaIcon @icon="search" />
      </div>
      <Input
        @type="search"
        @value={{this.searchString}}
        @key-up={{perform didSearch}}
        @focus-out={{perform didSearch}}
        @escape-press={{action "clearSearch"}}
        @placeholder="Search..."
        aria-label="Search users"
        class="rounded border-0 p-3 pl-8 w-full border border-gray-300 bg-gray-100 focus:bg-white" />
    </div>
    <div class="flex w-1/2 items-center text-gray-600">
      <LinkTo @route="authenticated.site-settings.categories.new" @class="bg-teal-600 hover:bg-teal-700 text-white text-sm font-semibold py-2 px-2 ml-2 rounded">
        Add Category
      </LinkTo>
    </div>
  </div>
</div>

<div class="treadmill-content__table-body pt-26">
  <EllaTreadmill
    @content={{model}}
    @minColumnWidth="100%"
    @row="84" as |item index|
  >
    <label class="block text-gray-700 text-sm font-bold mb-2" for="long_name_{{index}}">
      Long Name: {{item.longName}}
      <LinkTo @tagName="button" @route="authenticated.site-settings.categories.view" @model={{item.id}} @aria-label="Edit category {{item.longName}}" class="text-gray-400 hover:text-gray-600 float-right">
        <FaIcon @icon="edit" @size="lg" />
      </LinkTo>
    </label>

    <label class="block text-gray-700 text-sm font-bold mb-2" for="meta_title">
      Meta Title:  {{item.metaTitle}}
    </label>
    <hr>
  </EllaTreadmill>
</div>
