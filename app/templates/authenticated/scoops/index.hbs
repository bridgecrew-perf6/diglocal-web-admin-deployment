<div class="treadmill-content__fixed-header text-sm">
  <div class="flex h-10">
    <div class="flex relative w-1/3">
      <div class="absolute left-0 top-0 bottom-0 flex items-center text-teal-600 font-medium px-2">
        <FaIcon @icon="search" />
      </div>
      <Input
        @type="search"
        @value={{this.searchString}}
        @key-up={{perform this.didSearch}}
        @focus-out={{perform this.didSearch}}
        @escape-press={{action "clearSearch"}}
        @placeholder="Search..."
        aria-label="Search users"
        class="rounded border-0 p-3 pl-8 w-full border border-gray-300 bg-gray-100 focus:bg-white" />
    </div>
    <div class="flex w-2/3 justify-between items-center text-gray-600">
      <CrunchySortBy @sort={{this.sort}} @sortMenuOptions={{this.sortMenuOptions}} class="ml-2" />
      <LinkTo @route="authenticated.scoops.new" @class="bg-teal-600 hover:bg-teal-700 text-white text-sm font-semibold py-2 px-2 ml-2 rounded">
        Add Scoop
      </LinkTo>
    </div>
  </div>
</div>
<div class="treadmill-content__table-body pt-32">
  {{#if this.isList}}
    {{#ella-treadmill
      content=this.model
      minColumnWidth="100%"
      row=250 as |item|
    }}
      <Scoop::ListRow @model={{item}} />
    {{/ella-treadmill}}
  {{else}}
    {{#ella-treadmill
      content=this.model
      minColumnWidth="33%"
      row=250 as |item|
    }}
      <div class="max-w-sm rounded overflow-hidden shadow-lg">
        <img class="w-full" src={{item.image.sizes.thumbx2}} alt="">
        <div class="px-6 py-4">
          <div class="font-bold text-xl mb-2">{{item.description}}</div>
          <p class="text-gray-700 text-base">
            {{item.business.name}}
          </p>
        </div>
        <div class="px-6 py-4">
          <ul class="ml-1">
            {{#each item.business.categories as |category|}}
              <CrunchyChip @tagName="li">
                {{category.longName}}
              </CrunchyChip>
            {{/each}}
          </ul>
        </div>
      </div>
    {{/ella-treadmill}}
  {{/if}}
</div>
