<div class="bg-grey-lighter h-screen font-sans">
  <div class="container mx-auto h-full flex justify-center items-center">
    <div class="w-1/3">
      <h1 class="font-hairline mb-6 text-center">{{if this.isLogin "Login to DigLocal Admin" "Sign up for Diglocal Admin"}}</h1>
      <Login @onLogin={{action "login"}} @onSignUp={{action "signup"}} @isLogin={{this.isLogin}} />
      {{#if this.error}}
        <p class="text-red-600 text-xs font-semibold"> {{or this.error.message "Oops! An unknown error occurred."}} </p>
      {{/if}}
      {{#if this.isLogin}}
        <p class="text-right text-gray-500 text-xs pt-2">
          <CrunchyButton @class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800">
            Forgot Password?
          </CrunchyButton>
        </p>
      {{/if}}
      <hr>
      {{#if this.isLogin}}
        Don't have an account?
      {{else}}
        Already have an account?
      {{/if}}
      <CrunchyButton @class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" @onClick={{action "switchActionType"}}>
        {{if this.isLogin "Sign Up" "Login"}}
      </CrunchyButton>
    </div>
  </div>
</div>
