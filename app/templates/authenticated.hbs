<div class="w-full max-w-container mx-auto px-6">
  <div class="lg:flex -mx-6">
    {{#if (or this.showSidebar media.isLargeUp)}}
      <div id="sidebar" class="fixed inset-0 pt-16 h-full bg-white z-90 w-full border-b -mb-16 lg:-mb-0 lg:static lg:h-auto lg:overflow-y-visible lg:border-b-0 pt-0 lg:w-1/4 block xl:w-1/5 border-r">
        <div id="nav_wrapper" class="h-full overflow-y-auto scrolling-touch lg:h-auto lg:block relative lg:sticky lg:top-16 bg-white lg:bg-transparent">
          {{#if media.isMobile}}
            <div class="flex justify-end">
              <button
                {{action (mut this.showSidebar) false}}
                class="px-6 text-5xl text-gray-600"
                aria-label="Close"
              >
                &times;
              </button>
            </div>
          {{/if}}
          <nav role="navigation" class="px-6 pt-6 overflow-y-auto text-base lg:text-sm lg:py-12 lg:pt-4 lg:pl-6 lg:pr-8 h-screen-less-16">
            <div class="mb-8">
              <LinkTo @class="nav-link" @route="authenticated.site-settings">Site Settings</LinkTo>
              <LinkTo @class="nav-link" @route="authenticated.businesses">Businesses</LinkTo>
              <LinkTo @class="nav-link" @route="authenticated.analytics">Analytics</LinkTo>
              <LinkTo @class="nav-link" @route="authenticated.users">Users</LinkTo>
              <LinkTo @class="nav-link" @route="authenticated.scoops">Scoops</LinkTo>
            </div>
          </nav>
        </div>
      </div>
    {{/if}}
    <div class="sub-header fixed w-full max-w-container top-16 h-10 z-80 bg-white flex">
      <div class="border-b lg:w-1/4 xl:w-container-1/5 h-full flex items-center order-last lg:order-first">
        {{#if media.isMobile}}
          <button {{action (mut this.showSidebar) true}} class="p-2 text-gray-500 text-4xl" aria-label="Menu"> &#9776; </button>
        {{/if}}
      </div>
      <div class="w-full lg:w-3/4 xl:w-container-4/5 h-full flex items-center border-b">
        <CrunchyBreadcrumbs @class="ml-2"/>
      </div>
    </div>
    <div id="content_wrapper" class="min-h-screen w-full lg:static lg:max-h-full lg:overflow-visible lg:w-3/4 xl:w-container-4/5">
      <div class="content relative">
        <main role="main" class="pt-26 pb-16 w-full ">
          {{outlet}}
        </main>
      </div>
    </div>
  </div>
</div>
